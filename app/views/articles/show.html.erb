<%= link_to(articles_path, { class: 'btn btn-outline-primary mb-3' }) do
  feather_icon('arrow-left') + ' Back'
end %>

<div class="article mb-5">
  <h1 class="article__title"><%= @article.title %></h1>

  <div class="article__post-time text-secondary mb-3">
    Posted
    <time datetime="<%= @article.created_at %>">
      <%= localize(@article.created_at, format: :short) %>
    </time>
  </div>

  <div class="article__controls btn-group mb-3" role="group">
    <%= link_to edit_article_path(@article), { class: 'btn btn-sm btn-primary' } do
      feather_icon('edit') + ' Edit'
    end %>
    <%= link_to article_path(@article), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' do
      feather_icon('trash-2') + " Delete"
    end %>
  </div>


  <p class="article__body"><%= @article.text %></p>
</div>

<div class="mb-3">
  <h2>Comments (<%= @article.comments.length %>)</h2>
  <% if @article.comments.length == 0 %>
    <em>This article has no comments.</em>
  <% end %>

  <%= render @article.comments %>
</div>

<div class="mb-3">
  <h2>Add a comment</h2>

  <%= render 'comments/form' %>
</div>
