<h1>Articles</h1>

<%= link_to 'Create new', new_article_path, { class: 'btn btn-primary mb-3' } %>

<div class="row">
  <% @articles.each do |article| %>
    <div class="article-tile col-md-6 col-lg-3">

      <div class="card">
        <div class="card-body d-flex flex-column justify-content-between">
          <div class="article-tile__content mb-3">
            <h2 class="card-title"><%= article.title %></h2>
            <p class=" card-text"><%= article.text.slice 0, 200 %><%= '&hellip;'.html_safe if article.text.length > 200 %></p>
          </div>

          <%= link_to 'Read more', article_path(article), { class: 'btn btn-outline-primary' } %>
        </div>
      </div>

    </div>
  <% end %>
</div>